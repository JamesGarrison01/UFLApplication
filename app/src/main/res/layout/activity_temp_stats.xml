<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jeyts.uflapplication.statsActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="544dp">

        <Button
            android:id="@+id/teamToggleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="8dp"
            android:text="Teams"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/playersToggleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="90dp"
            android:layout_marginTop="8dp"
            android:text="Players"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="365dp"
            android:layout_height="474dp"
            android:layout_marginTop="64dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ScrollView
                android:layout_width="349dp"
                android:layout_height="458dp"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="7dp"
                android:layout_marginStart="7dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tdTextTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Touch Downs:" />

                    <TextView
                        android:id="@+id/tdDisplayText"
                        android:layout_width="match_parent"
                        android:layout_height="140dp" />

                    <TextView
                        android:id="@+id/tacklesTextTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tackles: " />

                    <TextView
                        android:id="@+id/tacklesDisplayText"
                        android:layout_width="match_parent"
                        android:layout_height="140dp" />

                    <TextView
                        android:id="@+id/catchesTextTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Catches: " />

                    <TextView
                        android:id="@+id/catchesDisplayText"
                        android:layout_width="match_parent"
                        android:layout_height="149dp" />
                </LinearLayout>
            </ScrollView>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>
