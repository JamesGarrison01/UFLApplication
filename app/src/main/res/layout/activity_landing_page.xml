<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jeyts.uflapplication.landingPage">

    <EditText
        android:id="@+id/landingLogoText"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="332dp"
        android:layout_height="86dp"
        android:layout_marginBottom="449dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="@android:string/untitled"
        android:inputType="textPersonName"
        android:onClick="goTeam"
        android:text="Unicycle Football League"
        android:textAlignment="center"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStats"
        android:layout_width="158dp"
        android:layout_height="89dp"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="175dp"
        android:hint="@string/statsButton"
        android:onClick="goStats"
        android:text="@string/stats"
        app:layout_constraintBottom_toTopOf="@+id/btnSched"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintStart_toEndOf="@+id/btnTeams"
        app:layout_constraintTop_toBottomOf="@+id/landingLogoText" />

    <Button
        android:id="@+id/btnTeams"
        android:layout_width="156dp"
        android:layout_height="90dp"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="175dp"
        android:hint="@string/teamButton"
        android:onClick="goTeam"
        android:text="Teams"
        app:layout_constraintBottom_toTopOf="@+id/btnSched"
        app:layout_constraintEnd_toStartOf="@+id/btnStats"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/landingLogoText" />

    <Button
        android:id="@+id/btnSched"
        android:layout_width="327dp"
        android:layout_height="102dp"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:hint="@string/schedButton"
        android:onClick="goSched"
        android:text="Schedule/Location"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTeams" />

</android.support.constraint.ConstraintLayout>
