<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jeyts.uflapplication.landingPage">

    <Button
        android:id="@+id/btnStats"
        android:layout_width="158dp"
        android:layout_height="89dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/statsButton"
        android:onClick="goStats"
        android:text="@string/stats"
        app:layout_constraintBottom_toTopOf="@+id/btnSched"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnTeams"
        android:layout_width="158dp"
        android:layout_height="89dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:hint="@string/teamButton"
        android:onClick="goTeam"
        android:text="Teams"
        app:layout_constraintBottom_toTopOf="@+id/btnSched"
        app:layout_constraintEnd_toStartOf="@+id/btnStats"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSched"
        android:layout_width="158dp"
        android:layout_height="89dp"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/schedButton"
        android:onClick="goSched"
        android:text="Schedule"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/ruleBtn"
        android:layout_width="158dp"
        android:layout_height="89dp"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="16dp"
        android:text="Rule Book"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnSched" />

    <TextView
        android:id="@+id/bannerText"
        android:layout_width="233dp"
        android:layout_height="33dp"
        android:layout_marginEnd="63dp"
        android:layout_marginTop="16dp"
        android:text="UNICYCLE FOOTBALL LEAGUE"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
